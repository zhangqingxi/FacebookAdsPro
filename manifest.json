{
  "manifest_version": 3,
  "name": "Facebook广告成效助手 Pro",
  "description": "针对Facebook广告渠道，进行数据追踪，获取站点的发起结账、已支付等指标，赋能助商户运营决策。",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "tabs", 
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "http://cctvskit.local/*",
    "http://cctvskit.com/*",
    "https://cctvskit.com/*",
    "https://*.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*"
      ],
      "js": [
        "js/config.js",
        "js/logger.js",
        "js/storage-manager.js",
        "js/id-manager.js",
        "js/state-manager.js",
        "js/utils.js",
        "js/api-service.js",
        "js/dom-manager.js",
        "js/data-manager.js",
        "js/area-manager.js",
        "js/main.js"
      ],
      "css": [
        "css/main.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["css/*", "js/*", "images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}